{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Bienvenue sur le nouveau site de gestion de matériels de l'école Normandie Web School à Rouen ! ✅</h1>
  
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Date debut</th>
                <th scope="col">Date fin</th>    
                <th scope="col">Email</th>   
                <th scope="col">Matérial</th>       
                <th scope="col">Mail</th>            
            </tr>
        </thead>
        <tbody>

        {% for eleve in eleves %}
            <tr>
                <td>{{ eleve.empruntDate  ? eleve.empruntDate|date('d-m-Y H:i:s') : ''}}</td>
                <td>{{ eleve.rendered ? eleve.rendered|date('d-m-Y H:i:s') : ''}}</td>
                <td>{{ eleve.email }}</td>
                <td>{{ eleve.material.name }}</td>  
                <td>{{ include('home/sendMail.html.twig') }}</td>                        
            </tr>
           
          
                
        {% endfor %}
        </tbody>
    </table>

</div>




{% endblock %}
