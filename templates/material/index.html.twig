{% extends 'base.html.twig' %}

{% block title %}Material index{% endblock %}

{% block body %}
    <h1>Matériel</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Quantité</th>
               
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td>{{ material.name }}</td>
                <td>{{ material.quantity }}</td>
                <td>
                    <a href="{{ path('app_material_show', {'id': material.id}) }}"> Voir</a>
                    <a href="{{ path('app_material_edit', {'id': material.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_material_new') }}">Créer un nouveau</a>
{% endblock %}
