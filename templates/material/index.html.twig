{% extends 'base.html.twig' %}

{% block title %}Materiel{% endblock %}

{% block body %}
    <h1>Matériel</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Quantité</th>    
                <th>Actions</th>                    
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td>{{ material.name }}</td>
                <td>{{ material.quantity }}</td>
                <td><a class="btn btn-primary" href="{{ path('app_material_edit', {'id': material.id}) }}">Editer</a></td>              
            </tr>
           
          
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            
    <a  class="btn btn-secondary" =href="{{ path('app_material_new') }}">Créer un nouveau</a>
{% endblock %}
